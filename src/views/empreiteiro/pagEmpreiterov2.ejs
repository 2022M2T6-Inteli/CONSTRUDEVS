    <script>
  const url = 'http://localhost:3001/selectAllVagas';
    fetch(url)
      .then((response) => {
        return response.json();
      })
      .then((data) => {
        let x = data;
        let saida = '';
        x.map(function(Vagas) {
          saida +=  ` <strong> ${Vagas.regiao}` + " - " + `${Vagas.area_de_atuacao}` + " - " +`${Vagas.telefone}` + '</strong> ' +'<br>';
        });
        document.getElementById('resultado').innerHTML = saida;
      })
      .catch(function(error) {
        console.log(error);
      });

